 */
public class Exercise7 {
	class InnerClass{
		void update(int x){
			i = x;
			value();
		}
	}
	private int i;
	public Exercise7(int x) {
		i = x;
	}
	private int value(){
		return i;
	}
	
	public void run() {
		InnerClass innerClass = new InnerClass();
		innerClass.update(1);
		System.out.println(i);
	}
	
	public static void main(String[] args) {
		Exercise7 exercise7 = new Exercise7(0){
			public void update() {
				super.value();
				super.i = 1;
			}
			@Override
			public void run() {
				update();
			}
		};
		exercise7.run();
	}
}
